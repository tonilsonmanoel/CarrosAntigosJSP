<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletCadastro</servlet-name>
        <servlet-class>br.com.bean.ServletCadastro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDelete</servlet-name>
        <servlet-class>br.com.bean.ServletDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEditar</servlet-name>
        <servlet-class>br.com.bean.ServletEditar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAlterar</servlet-name>
        <servlet-class>br.com.bean.ServletAlterar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServertLoginCadastro</servlet-name>
        <servlet-class>br.com.bean.ServertLoginCadastro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginControle</servlet-name>
        <servlet-class>br.com.bean.LoginControle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRecuperaSenha</servlet-name>
        <servlet-class>br.com.bean.ServletRecuperaSenha</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMudarSenha</servlet-name>
        <servlet-class>br.com.bean.ServletMudarSenha</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCadastro</servlet-name>
        <url-pattern>/ServletCadastro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDelete</servlet-name>
        <url-pattern>/del</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEditar</servlet-name>
        <url-pattern>/editar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAlterar</servlet-name>
        <url-pattern>/alterar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServertLoginCadastro</servlet-name>
        <url-pattern>/CadastroLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControle</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRecuperaSenha</servlet-name>
        <url-pattern>/RecuperaSenha</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMudarSenha</servlet-name>
        <url-pattern>/mudarSenha</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
